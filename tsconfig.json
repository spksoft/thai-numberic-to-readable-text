{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "strict": true,
    "lib": ["es2015", "dom"],
    "typeRoots": ["node_modules/@types/"]
  },
  "exclude": ["node_modules", "distribution"]
}
